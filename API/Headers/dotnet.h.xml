<ApiMonitor>
    <Headers>

        <!-- TODO: Interfaces -->
        <Variable Name="IAssembly"                  Type="Interface" />
        <Variable Name="IAssemblyCache"             Type="Interface" />
        <Variable Name="IAssemblyName"              Type="Interface" />
        <Variable Name="IAssemblyEnum"              Type="Interface" />
        <Variable Name="IHistoryReader"             Type="Interface" />
        <Variable Name="IInstallReferenceEnum"      Type="Interface" />
        <Variable Name="IAppIdAuthority"            Type="Interface" />
        <Variable Name="IIdentityAuthority"         Type="Interface" />
        <Variable Name="IApplicationContext"        Type="Interface" />

        <!-- Interfaces Aliases -->
        <Variable Name="LPASSEMBLYNAME"             Type="Alias"    Base="IAssemblyName*" />
        <Variable Name="LPASSEMBLYNAME*"            Type="Pointer"  Base="LPASSEMBLYNAME" />
        <Variable Name="LPPAPPLICATIONCONTEXT"      Type="Alias"    Base="IApplicationContext*" />
        <Variable Name="LPPAPPLICATIONCONTEXT*"     Type="Pointer"  Base="LPPAPPLICATIONCONTEXT" />

        <!-- ASM_CACHE_FLAGS -->
        <Variable Name="ASM_CACHE_FLAGS" Type="Alias" Base="DWORD">
            <Flag>
                <Set Name="ASM_CACHE_ZAP"           Value="0x1" />
                <Set Name="ASM_CACHE_GAC"           Value="0x2" />
                <Set Name="ASM_CACHE_DOWNLOAD"      Value="0x4" />
                <Set Name="ASM_CACHE_ROOT"          Value="0x8" />
                <Set Name="ASM_CACHE_ROOT_EX"       Value="0x80" />
            </Flag>
        </Variable>

    </Headers>
</ApiMonitor>