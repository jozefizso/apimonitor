            <Param Type="DWORD" Name="Flags" />
            <Param Type="LPVOID" Name="Reserved" />
            <Param Type="LPWSTR" Name="AdapterName" />
            <Param Type="LPDHCPCAPI_CLASSID" Name="pClassId" />
