<ApiMonitor>
    <Include Filename="Headers\windows.h.xml" />
    <Include Filename="Headers\ole.h.xml" />
    
    <Module Name="wab32.dll" CallingConvention="STDCALL" ErrorFunc="HRESULT" OnlineHelp="MSDN">
        <!-- Parameters -->
        <Variable Name="LPADRBOOK*"          Type="Alias"        Base="LPVOID" />
        <Variable Name="LPWABOBJECT*"        Type="Alias"        Base="LPVOID" />
        <Variable Name="LPWAB_PARAM"         Type="Alias"        Base="LPVOID" />
        <Variable Name="ALLOCATEBUFFER*"     Type="Alias"        Base="LPVOID" />
        <Variable Name="FREEBUFFER*"         Type="Alias"        Base="LPVOID" />

        <!-- Windows Address Book -->
        <Category Name="Messaging and Collaboration/Windows Address Book" />
        <Api Name="WABOpen">
            <Param Type="LPADRBOOK*" Name="lppAdrBook" />
            <Param Type="LPWABOBJECT*" Name="lppWABObject" />
            <Param Type="LPWAB_PARAM" Name="lpWABParam" />
            <Param Type="DWORD" Name="Reserved2" />
            <Return Type="HRESULT" />
            <Success Return="Equal" Value="0" />
        </Api>
        <Api Name="WABOpenEx">
            <Param Type="LPADRBOOK*" Name="lppAdrBook" />
            <Param Type="LPWABOBJECT*" Name="lppWABObject" />
            <Param Type="LPWAB_PARAM" Name="lpWABParam" />
            <Param Type="DWORD" Name="Reserved2" />
            <Param Type="ALLOCATEBUFFER*" Name="lpfnAllocateBuffer" />
            <Param Type="ALLOCATEMORE*" Name="lpfnAllocateMore" />
            <Param Type="FREEBUFFER*" Name="lpfnFreeBuffer" />
            <Return Type="HRESULT" />
            <Success Return="Equal" Value="0" />
        </Api>
    </Module>
</ApiMonitor>