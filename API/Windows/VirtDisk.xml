        <Variable Name="PCREATE_VIRTUAL_DISK_PARAMETERS"        Type="Alias"    Base="LPVOID" />
        <Variable Name="POPEN_VIRTUAL_DISK_PARAMETERS"          Type="Alias"    Base="LPVOID" />
        
