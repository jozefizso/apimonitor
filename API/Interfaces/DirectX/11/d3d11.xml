<ApiMonitor>
    <Include Filename="Interfaces\DirectX\11\ID3D11Device.xml" />
    <Include Filename="Interfaces\DirectX\11\ID3D11DeviceContext.xml" />
    <Include Filename="Interfaces\DirectX\DXGI\IDXGIAdapter.xml" />
    
    <Module Name="d3d11.dll" CallingConvention="STDCALL" OnlineHelp="MSDN" ErrorFunc="HRESULT" Category="Graphics and Multimedia/DirectX/Direct3D 11/Core">
        <!-- TODO: TEMPORARY -->

        <Variable Name="D3D_DRIVER_TYPE" Type="Alias" Base="UINT">
            <Enum>
                <Set Name="D3D_DRIVER_TYPE_UNKNOWN"		Value="0" />
                <Set Name="D3D_DRIVER_TYPE_HARDWARE"	Value="1" />
                <Set Name="D3D_DRIVER_TYPE_REFERENCE"	Value="2" />
                <Set Name="D3D_DRIVER_TYPE_NULL"		Value="3" />
                <Set Name="D3D_DRIVER_TYPE_SOFTWARE"	Value="4" />
                <Set Name="D3D_DRIVER_TYPE_WARP"        Value="5" />
            </Enum>
        </Variable>

        <Variable Name="const DXGI_SWAP_CHAIN_DESC*"    Type="Alias"   Base="LPVOID" />

        <Variable Name="IDXGISwapChain"         Type="Interface" />

        <!-- Variables -->
        <Api Name="D3D11CreateDevice">
            <Param Type="IDXGIAdapter*" Name="pAdapter" />
            <Param Type="D3D_DRIVER_TYPE" Name="DriverType" />
            <Param Type="HMODULE" Name="Software" />
            <Param Type="UINT" Name="Flags" />
            <Param Type="const D3D_FEATURE_LEVEL*" Name="pFeatureLevels" />
            <Param Type="UINT" Name="FeatureLevels" />
            <Param Type="UINT" Name="SDKVersion" />
            <Param Type="ID3D11Device**" Name="ppDevice" />
            <Param Type="D3D_FEATURE_LEVEL*" Name="pFeatureLevel" />
            <Param Type="ID3D11DeviceContext**" Name="ppImmediateContext" />
            <Return Type="HRESULT" />
            <Success Return="Equal" Value="0" />
        </Api>
        <Api Name="D3D11CreateDeviceAndSwapChain">
            <Param Type="IDXGIAdapter*" Name="pAdapter" />
            <Param Type="D3D_DRIVER_TYPE" Name="DriverType" />
            <Param Type="HMODULE" Name="Software" />
            <Param Type="UINT" Name="Flags" />
            <Param Type="const D3D_FEATURE_LEVEL*" Name="pFeatureLevels" />
            <Param Type="UINT" Name="FeatureLevels" />
            <Param Type="UINT" Name="SDKVersion" />
            <Param Type="const DXGI_SWAP_CHAIN_DESC*" Name="pSwapChainDesc" />
            <Param Type="IDXGISwapChain**" Name="ppSwapChain" />            
            <Param Type="ID3D11Device**" Name="ppDevice" />
            <Param Type="D3D_FEATURE_LEVEL*" Name="pFeatureLevel" />
            <Param Type="ID3D11DeviceContext**" Name="ppImmediateContext" />
            <Return Type="HRESULT" />
            <Success Return="Equal" Value="0" />
        </Api>
    </Module>
</ApiMonitor>