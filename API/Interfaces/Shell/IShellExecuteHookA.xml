        <Variable Name="LPSHELLEXECUTEINFOA" Type="Pointer" Base="SHELLEXECUTEINFOA" />

        <!-- Methods -->
        <Api Name="Execute">
            <Param Type="LPSHELLEXECUTEINFOA" Name="pei" />
            <Return Type="HRESULT" />
        </Api>
