            <Field Type="void*"                 Name="lpIDList" />
            <Field Type="LPCSTR"               Name="lpClass" />
            <Field Type="HKEY"                  Name="hkeyClass" />
            <Field Type="DWORD"                 Name="dwHotKey" />
            <Field Type="[SHELLEXECUTEINFO_u]"  Name="" />
